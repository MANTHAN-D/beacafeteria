    <script>
    var app = angular.module('registercounter', []);
    app.controller('registercounterCtrl', function($scope,$http) {
  
    $scope.home=function(){
	$scope.counterDetails=true;
	$scope.adminDetails=false;
	window.location='./loadadminejs';
	};
	$scope.logout = function(){
        window.location='/logout';
    };
    $scope.addcounter = function(counter) {
    
		    	$http({
		            method: 'POST',
		            url: '/counter/create',
		            data:counter
		            }).success(function(data){
		           		if(data.statusCode=200)
		           		{
		           		window.location='/admin/loadadminejs';
		           		}
		           		else
		           		{
		           		alert("Counter creation failed. Try again.");
		           		window.location='/admin/counterSignUp';
		           		}
		           		
		        }).error(function(error){
		            alert("Something went wrong. Please try again.");
		        });
		    };    
    
});


    </script>
    
